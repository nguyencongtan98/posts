<div class="card card-body">
  <h3>Bài viết mới</h3>
  <form action="/posts" method="post">
    <div class="form-group">
      <label for="title">Tiêu đề</label>
      <input
        type="text"
        class="form-control"
        name="title"
        required
        value="{{title}}"
      />
    </div>
    <div class="form-group">
      <label for="text">Nội dung</label>
      <textarea
        type="text"
        class="form-control"
        name="text"
        required
        value={{text}}
      ></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Tạo post mới</button>
  </form>
</div>